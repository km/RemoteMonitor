<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemoteMonitor.MainPage"
             BackgroundColor="#112B47">
    <StackLayout>
        <Frame BackgroundColor="#007BA7" Padding="1">
            <Label Text="Remote Monitor"  HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Label Text="Connect to Server" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center" Margin="0, 200, 10, 20" FontSize="20"/>

        <Entry x:Name="ip" Placeholder="IP address" Keyboard="Default" TextColor="White" Margin="10, -20, 10, 0"/>
        <Entry x:Name="port" Placeholder="Port" Keyboard="Numeric" TextColor="White" Margin="10, 0, 10, 0"/>
        <Entry x:Name="keyword" Placeholder="Keyword" Keyboard="Default" TextColor="White" Margin="10, 0, 10, 0"/>
        <Button x:Name="connect" Clicked="Button_Clicked" Text="Connect" Margin="80, 20, 80, 0" BorderWidth="1.5" CornerRadius="50" TextColor="White" BorderColor="Aquamarine" BackgroundColor="#112B47"/>
        <Label x:Name="error" Text="" HorizontalTextAlignment="Center" TextColor="Red"/>
    </StackLayout>

</ContentPage>
